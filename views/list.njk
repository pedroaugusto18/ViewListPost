{% extends "layout.njk" %}

{% block content %}
    <h2 class="text-center">
        List Post
    </h2>
    <div class="block-table">
        <table class="table table-hover">
            <thead>
                <tr class="table-warning">
                    <th>ID</th>
                    <th>User ID</th>
                    <th>Title</th>
                </tr>
            </thead>
            <tbody>
                {% for item in items %}
                    <tr id="{{ item.id }}" class="item-post">
                        <th scope="row">
                            {{ item.id }}
                        </th>
                        <td>
                            {{ item.userId }}
                        </td>    
                        <td>
                            {{ item.title }}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>    
{% endblock %}
